root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space
insert_final_newline = true
max_line_length = 120
tab_width = 2

[{*.cjs,*.js}]
indent_size = 2
tab_width = 2

[{*.ts,*.ats}]
indent_size = 2
tab_width = 2

[{*.yml,*.yaml}]
indent_size = 2

[{.stylelintrc,.eslintrc,.babelrc,jest.config,*.bowerrc,*.jsb3,*.jsb2,*.graphqlconfig,*.json}]
indent_size = 2
