{
  "compilerOptions": {
    "sourceMap": true,
    "target": "es2019",
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": false,
    "strict": true,
    "strictNullChecks": true,
    "alwaysStrict": true,
    "esModuleInterop": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "downlevelIteration": true,
    "types": ["node"],
    "allowJs": true
  },
  "include": ["environment.ts", "src/index.js"],
  "exclude": ["node_modules", "dist"]
}
